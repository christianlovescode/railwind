<% tailwind_classes =
  case @type
  when "primary"
    "px-4 py-2 bg-green-500 text-white rounded-md"
  when "secondary"
    "px-4 py-2 bg-gray-500 text-white rounded-md"
  else
    "px-4 py-2 bg-blue-500 text-white rounded-md"
  end %>

<button class="<%= tailwind_classes %>">
  <%= @text %>
</button>
